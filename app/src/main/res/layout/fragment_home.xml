<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Innovation Concept"
            android:textColor="@color/purple"
            android:textSize="@dimen/M_TEXT" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019"
            android:textColor="@color/purple"
            android:textSize="36dp"
            android:textStyle="bold" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorum_ipsum"
            android:textSize="@dimen/S_TEXT" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="match_parent"
                android:background="@color/orange" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:orientation="vertical">

                <com.nestnfly.eventapp.custom.TfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Event Sponsors"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <com.nestnfly.eventapp.custom.TfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Event Sponsors"
                    android:textSize="@dimen/S_TEXT" />
            </LinearLayout>
        </RelativeLayout>

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:text="Platinum Sponsors"
            android:textColor="@color/black"
            android:textSize="@dimen/S_TEXT"
            app:isBold="true" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="8dp"
            android:text="tasttlig corporation"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/S_TEXT" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="8dp"
            android:text="fi interactive"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/S_TEXT" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="8dp"
            android:text="@string/cousley_company"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/S_TEXT" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="8dp"
            android:text="kpdi ventures"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/S_TEXT" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="8dp"
            android:text="loopsight company inc"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/S_TEXT" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="match_parent"
                android:background="@color/orange" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:orientation="vertical">

                <com.nestnfly.eventapp.custom.TfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Travel Information"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:text="Location"
            android:textColor="@color/black"
            app:isBold="true" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="401 Logan Avenue"
            android:textColor="@color/colorPrimaryDark" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:text="Toronto, ON, Suite 216"
            android:textColor="@color/colorPrimaryDark" />


        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:text="Transportation"
            android:textColor="@color/black"
            app:isBold="true" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="Take TTC to Pape Station"
            android:textColor="@color/colorPrimaryDark" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:text="Take the Pape 72 to Carlaw and Dundas"
            android:textColor="@color/colorPrimaryDark" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:text="walk to 21 Dickens go to Suite 216"
            android:textColor="@color/colorPrimaryDark" />


        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:text="@string/food_restaurant"
            android:textColor="@color/black"
            app:isBold="true" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="There is a Startbucks 1 block away"
            android:textColor="@color/colorPrimaryDark" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:text="There is a coffee and snack bar downstairs"
            android:textColor="@color/colorPrimaryDark" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:text="You can always Uber in some food"
            android:textColor="@color/colorPrimaryDark" />

        <ImageView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            android:layout_height="52dp"
            android:src="@drawable/logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="102dp" />
    </LinearLayout>

</LinearLayout>