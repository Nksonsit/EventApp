<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="match_parent"
                android:background="@color/orange" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:orientation="vertical">

                <com.nestnfly.eventapp.custom.TfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Get in Touch"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:text="NEST N FLY"
            android:textColor="@color/dark_orange"
            android:textSize="24sp"
            app:isBold="true" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="8dp"
            android:text="401 Logan Ave #216"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/L_TEXT" />

        <com.nestnfly.eventapp.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="4dp"
            android:text="Toronto ON M4M 2N9"
            android:textAllCaps="true"
            android:textSize="@dimen/L_TEXT" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="match_parent"
                android:background="@color/orange" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:orientation="vertical">

                <com.nestnfly.eventapp.custom.TfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Write to us"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp">

            <EditText
                android:id="@+id/edtYourName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:hint="Your Name"
                android:inputType="textNoSuggestions"
                android:lines="1"
                android:maxLength="50"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/N_TEXT" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginTop="@dimen/dimen_16dp">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:hint="Your E-mail address"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLength="50"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/N_TEXT" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginTop="@dimen/dimen_16dp">

            <EditText
                android:id="@+id/edtSubject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:hint="Subject"
                android:inputType="textNoSuggestions"
                android:lines="1"
                android:maxLength="70"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/N_TEXT" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp">

            <EditText
                android:id="@+id/edtMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="top"
                android:hint="Message"
                android:lines="3"
                android:maxLength="250"
                android:maxLines="3"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/N_TEXT" />
        </android.support.design.widget.TextInputLayout>

        <com.nestnfly.eventapp.custom.TfButton
            android:id="@+id/btnSendMail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42dp"
            android:background="@drawable/orange_btn"
            android:text="SEND MAIL"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="102dp" />
    </LinearLayout>

</LinearLayout>